# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,json,yaml,yml,md,html,css}]
indent_style = space
indent_size = 2

[*.{py,sh}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
